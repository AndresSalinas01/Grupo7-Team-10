@page
@model HormonaDeCrecimiento.App.Pages_BDPacientes.AddPatronModel
@{
}
<style>
#buttonCancel{
  text-decoration: none;
  color:#fff;
  font-size:15px;
  font-family: 'Ropa Sans', sans-serif; sans-serif;sans-serif;
  text-shadow: 1px 1px 1px #000;
}
</style>
<section class="h-100 h-custom" style="background-color: #8fc4b7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://img.remediosdigitales.com/84736c/1366_2000/1366_2000.jpg"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Agregar patron - @Model.Paciente.Nombre @Model.Paciente.Apellido</h3>

            <form method="post" class="px-md-2">
              <div asp-validation-summary="ModelOnly" class="mb-3"></div>
              <div class="form-group">
              <div class="form-outline mb-4">
                <input  type="hidden" asp-for="Paciente.Id">
            
                <select asp-for= "Patron.TipoPatron" class="form-control">

                    <option value="0">Peso</option>
                    <option value="1">Perimetro</option>
                    <option value="2">Talla</option>
                    <option value="3">Medida</option>

                </select>
              <div class="mb-4">
                <label class="form-label">Valor</label>
                <input asp-for="Patron.Valor" class="form-control" required/>
              </div>
             
              <div class="mb-4">
                <label class="form-label">Fecha</label>
                <input asp-for="Patron.FechaHora" class="form-control" required/>
              </div>
            <button type="button" class="btn btn-secondary"><a id="buttonCancel" asp-page="./Index">Cancelar</a></button>
              <button type="submit" class="btn btn-primary" asp-page-handler="Save">Enviar</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
