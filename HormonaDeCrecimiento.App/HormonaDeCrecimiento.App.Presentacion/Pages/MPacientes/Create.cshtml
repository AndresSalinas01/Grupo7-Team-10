@page
@model HormonaDeCrecimiento.App.Pages_MPacientes.CreateModel
@{
}
<section class="h-100 h-custom" style="background-color: #8fc4b7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://www.clubratoncitoperez.es/blog/wp-content/uploads/2020/12/Ni%C3%B1os-sonriendo.jpg"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Crear Paciente</h3>

              <form class="px-md-2" method="post">
                <div asp-validation-summary="ModelOnly" class="mb-3"></div>
                <div class="form-group">
                <div class="form-outline mb-4" >
                  <label for="lNombre" class="form-label">Nombre</label>
                  <input pattern="[a-zA-Z][a-zA-Z ]{4,}"  asp-for="Paciente.Nombre" class="form-control" id="INombre" placeholder="Digite el nombre del paciente" required/>
                </div>
                <div class="mb-4">
                  <label for="lApellido" class="form-label">Apellido</label>
                  <input pattern="[a-zA-Z][a-zA-Z ]{4,}" asp-for="Paciente.Apellido" class="form-control" id="IApellido" placeholder="Digite el apellido del paciente" required/>
                </div>
                <div class="mb-4">
                  <label for="lTelefono" class="form-label">Telefono</label>
                  <input  type="number" asp-for="Paciente.Telefono" class="form-control" id="ITelefono" placeholder="Digite el telefono del paciente" required/>
                </div>
                <div class="mb-4">
                  <label for="lDocumento" class="form-label">Documento</label>
                  <input type="number" asp-for="Paciente.Documento" class="form-control" id="IDocumento" placeholder="Digite el documento del paciente"required/>
                </div>
                <div class="mb-4">
                  <label for="lDireccion" class="form-label">Direccion</label>
                  <input asp-for="Paciente.Direccion" class="form-control" id="IDireccion" placeholder="Digite la direccion del paciente" required/>
                </div>
                <div class="mb-4">
                  <label for="lGenero" class="form-label">Genero</label><br>
                      <input type="radio" asp-for="Paciente.Genero" value=0 required> Masculino<br />
                      <input type="radio" asp-for="Paciente.Genero" value=1> Femenino<br />
                </div>
                <div class="mb-4">
                  <label for="lLatitud" class="form-label">Latitud</label>
                  <input type="number" step=".01" asp-for="Paciente.Latitud" class="form-control" id="ILatitud" placeholder="Digite la latitud" required/>
                </div>
                <div class="mb-4">
                  <label for="lLongitud" class="form-label">Longitud</label>
                  <input type="number" step=".01" asp-for="Paciente.Longitud" class="form-control" id="ILongitud" placeholder="Digite la Longitud" required/>
                </div>
                  <div class="mb-4">
                  <label for="lCiudad" class="form-label">Ciudad</label>
                  <input pattern="[a-zA-Z][a-zA-Z ]{4,}" asp-for="Paciente.Ciudad" class="form-control" id="ICiudad" placeholder="Digite la Ciudad" required/>
                </div>
                <div class="mb-4">
                  <label for="lFechadeNacimiento" class="form-label">Fecha de nacimiento</label>
                  <input asp-for="Paciente.FechadeNacimiento" class="form-control" id="IFechadeNacimiento" required/>
                </div>

                <button type="submit" class="btn btn-primary btn-lg mb-1" asp-page-handler="Save">Submit</button>
                </div>
              </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>