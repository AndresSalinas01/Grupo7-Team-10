@page
@model HormonaDeCrecimiento.App.Pages_MPacientes.DeleteModel
@{
}
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}

#buttonCancel{
  text-decoration: none;
  color:#fff;
  font-size:15px;
  font-family: 'Ropa Sans', sans-serif; sans-serif;sans-serif;
  text-shadow: 1px 1px 1px #000;
}
</style>

<h2>Eliminar Paciente</h2>

<table>
    <tr>
        <th>Detalle</th>
        <th>Descripcion</th>
    </tr>
    <tr>
        <td>Id</td>
        <td>@Model.Paciente.Id</td>
    </tr>
    <tr>
        <td>Nombre</td>
        <td>@Model.Paciente.Nombre</td>
    </tr>
    <tr>
        <td>Apellido</td>
        <td>@Model.Paciente.Apellido</td>  
    </tr>
    <tr>
        <td>Telefono</td>
        <td>@Model.Paciente.Telefono</td>
    </tr>
    <tr>
        <td>Documento</td>
        <td>@Model.Paciente.Documento</td>
    </tr>
    <tr>
        <td>Genero</td>
        <td>@Model.Paciente.Genero</td>
    </tr>
</table>
<form method="post">
  <div asp-validation-summary="ModelOnly" class="mb-3"></div>
    <div class="form-group">
    <div class="mb-3"><br><br>
        <label class="form-label"><b>¿Desea eliminar al paciente?</b></label>
         <input type="hidden" asp-for="Paciente.Id" class="form-control" id="IId" value="@Model.Paciente.Id">
    </div>
    <button type="button" class="btn btn-secondary"><a id="buttonCancel" asp-page="./Index">Cancelar</a></button>
    <button type="submit" class="btn btn-primary" asp-page-handler="Save">Eliminar</button>
    </div>
</form>




