@page
@model HormonaDeCrecimiento.App.Pages_BDFamiliares.CreateModel
@{
}
<section class="h-100 h-custom" style="background-color: #8fc4b7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://www.lavanguardia.com/files/og_thumbnail/uploads/2019/08/14/5fa52ce251f00.jpeg"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Crear Familiar</h3>

              <form class="px-md-2" method="post">
                <div asp-validation-summary="ModelOnly" class="mb-3"></div>
                <div class="form-outline mb-4">
                  <label for="lNombre" class="form-label">Nombre</label>
                  <input pattern="[a-zA-Z][a-zA-Z ]{4,}" asp-for="Familiar.Nombre" class="form-control" id="INombre" placeholder="Digite el nombre del Familiar" required/>
                </div>
                <div class="mb-4">
                  <label for="lApellido" class="form-label">Apellido</label>
                  <input pattern="[a-zA-Z][a-zA-Z ]{4,}" asp-for="Familiar.Apellido" class="form-control" id="IApellido" placeholder="Digite el apellido del Familiar" required/>
                </div>
                <div class="mb-4">
                  <label for="lTelefono" class="form-label">Telefono</label>
                  <input asp-for="Familiar.Telefono" class="form-control" id="ITelefono" placeholder="Digite el telefono del Familiar" required/>
                </div>
                <div class="mb-4">
                  <label for="lDocumento" class="form-label">Documento</label>
                  <input type="number" asp-for="Familiar.Documento" class="form-control" id="IDocumento" placeholder="Digite el documento del Familiar" required/>
                </div>
                <div class="mb-4">
                  <label for="lGenero" class="form-label">Genero</label><br>
                      <input type="radio" asp-for="Familiar.Genero" value=0 required/>Masculino<br />
                      <input type="radio" asp-for="Familiar.Genero" value=1/>Femenino<br />
                      <input type="radio" asp-for="Familiar.Genero" value=2/>Intersexual<br />
                      <input type="radio" asp-for="Familiar.Genero" value=3/>NoBinario<br />
                </div>
                <div class="mb-4">
                  <label for="lParentesco" class="form-label">Parentesco</label>
                  <input asp-for="Familiar.Parentesco" class="form-control" id="IParentesco" placeholder="Digite el Parentesco" required/>
                </div>
                  <div class="mb-4">
                  <label for="lCorreo" class="form-label">Correo</label>
                  <input type="email" asp-for="Familiar.Correo" class="form-control" id="ICorreo" placeholder="Digite el Correo" required/>
                </div>
                <button type="submit" class="btn btn-primary btn-lg mb-1" asp-page-handler="Save">Submit</button>
              </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>