@page
@model HormonaDeCrecimiento.App.Pages_MMedicos.EditModel
@{
}
<style>
#buttonCancel{
  text-decoration: none;
  color:#fff;
  font-size:15px;
  font-family: 'Ropa Sans', sans-serif; sans-serif;sans-serif;
  text-shadow: 1px 1px 1px #000;
}
</style>
<section class="h-100 h-custom" style="background-color: #8fc4b7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://static.vecteezy.com/system/resources/previews/001/916/656/non_2x/man-writing-notes-free-photo.jpg"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Editar información</h3>
           
              <form class="px-md-2" method="post">
                <div asp-validation-summary="ModelOnly" class="mb-3"></div>
                <div class="form-outline mb-4">
                  <input  type="hidden" asp-for="Medico.Id" class="form-control" id="IId" value="@Model.Medico.Id">
                  <label for="lNombre" class="form-label">Nombre</label>
                  <input pattern="[a-zA-Z][a-zA-Z ]{4,}" asp-for="Medico.Nombre" class="form-control" id="INombre" value="@Model.Medico.Nombre" required/>
                </div>
                <div class="mb-4">
                  <label for="lApellido" class="form-label">Apellido</label>
                  <input pattern="[a-zA-Z][a-zA-Z ]{4,}" asp-for="Medico.Apellido" class="form-control" id="IApellido" value="@Model.Medico.Apellido" required/>
                </div>
                <div class="mb-4">
                  <label for="lTelefono" class="form-label">Telefono</label>
                  <input  type="number" asp-for="Medico.Telefono" class="form-control" id="ITelefono" value="@Model.Medico.Telefono" required/>
                </div>
                <div class="mb-4">
                  <label for="lDocumento" class="form-label">Documento</label>
                  <input type="number" asp-for="Medico.Documento" class="form-control" id="IDocumento" value="@Model.Medico.Documento" required/>
                </div>
                <div class="mb-4">
                  <label for="lGenero" class="form-label">Genero</label><br>
                      <input type="radio" asp-for="Medico.Genero" value=0 required/>Masculino<br />
                      <input type="radio" asp-for="Medico.Genero" value=1/>Femenino<br />
                      <input type="radio" asp-for="Medico.Genero" value=2/>Intersexual<br />
                      <input type="radio" asp-for="Medico.Genero" value=3/>NoBinario<br />
                </div>
                <div class="mb-4">
                  <label for="lEspecialidad" class="form-label">Especialidad</label>
                  <select asp-for="Medico.Especialidad" class="form-control">
                      <option value="Endocrino">Endocrino</option>
                      <option value="Pediatra">Pediatra</option>
                  </select>
                </div>
                <div class="mb-4">
                  <label for="lCodigo" class="form-label">Codigo</label>
                  <input asp-for="Medico.Codigo" class="form-control" id="ICodigo" value="@Model.Medico.Codigo" required/>
                </div>
                  <div class="mb-4">
                  <label for="lRegistroRethus" class="form-label">RegistroRethus</label>
                  <input asp-for="Medico.RegistroRethus" class="form-control" id="IRegistroRethus" value="@Model.Medico.RegistroRethus" required/>
                </div>
                <button type="submit" class="btn btn-primary btn-lg mb-1" asp-page-handler="Save">Submit</button>
              </form>


          </div>
        </div>
      </div>
    </div>
  </div>
</section>
